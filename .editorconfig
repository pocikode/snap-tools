# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# 4 spaces indentation, no tabs
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Matches Vue files
[*.vue]
indent_size = 2
max_line_length = 100

# TypeScript files
[*.ts]
indent_size = 2
max_line_length = 100

# JavaScript files
[*.js]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2
max_line_length = 100

# Markdown files
[*.md]
trim_trailing_whitespace = false
